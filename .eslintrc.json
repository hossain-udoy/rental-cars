// .eslintrc
{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	// HERE
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],

	"rules": {
	 "no-unused-vars":"error",
     "no-unused-expressions":"error",
     "prefer-const":"error",
    "no-console":"warn",
    "no-undef": "error"
	},

	"globals": {
		"process":"readonly"
	}
}
